@if (TempData["Success"] != null)
{
    <div id="alert-success" class="alert alert-success alert-absolute">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

@if (TempData["Failure"] != null)
{
    <div id="alert-failure" class="alert alert-danger alert-absolute">
        @TempData["Failure"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}
