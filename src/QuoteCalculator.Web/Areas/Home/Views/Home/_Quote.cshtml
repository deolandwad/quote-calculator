@model QuoteDetailModel

<div class="row">
    <div class="col-md-9 mx-auto">
        <div class="card card-body text-center">
            <h1 class="heading display-5 pb-3">@ViewBag.Button</h1>
            <form method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" asp-for="FirstName" placeholder="First name">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" asp-for="LastName" placeholder="Last name">
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" asp-for="Email" placeholder="Your email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" asp-for="MobileNumber" placeholder="Mobile number">
                        <span asp-validation-for="MobileNumber"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" step="0.01" class="form-control" asp-for="FinanceAmount" placeholder="Loan Amount">
                    </div>
                    <span asp-validation-for="FinanceAmount"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">%</span>
                        </div>
                        <input type="number" step="0.01" class="form-control" asp-for="InterestRate" placeholder="Interest Rate">
                    </div>
                    <span asp-validation-for="InterestRate"></span>
                </div>
                <div class="form-group">
                    <input type="number" step="0.01" class="form-control" asp-for="Terms" placeholder="Terms">
                    <span asp-validation-for="Terms"></span>
                </div>
                <div class="form-group col-md-9 mx-auto">
                    <a id="calcQuote" class="btn btn-dark btn-block">@ViewBag.Button</a>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
