@model EditLoanModel
@{
    var title = Model.Id == 0 ? "New Loan" : "Edit Loan";
    ViewBag.Title = title;
}

<div class="card card-body">
    <h1>@title</h1>

    <form method="post">
        <div class="row pb-100">
            <div class="col-12 col-md-6">
                <div class="form-group row">
                    <label for="FirstName" class="col-sm-4 col-form-label">First Name</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="LastName" class="col-sm-4 col-form-label">Last Name</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Email" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="MobileNumber" class="col-sm-4 col-form-label">Mobile number</label>
                    <div class="col-sm-8">
                        <input type="text" asp-for="MobileNumber" class="form-control" />
                        <span asp-validation-for="MobileNumber"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="FinanceAmount" class="col-sm-4 col-form-label">Loan Amount</label>
                    <div class="col-sm-8">
                        <input type="number" step="0.01" asp-for="FinanceAmount" class="form-control" />
                        <span asp-validation-for="FinanceAmount"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="InterestRate" class="col-sm-4 col-form-label">Interest Rate</label>
                    <div class="col-sm-8">
                        <input type="number" step="0.01" asp-for="InterestRate" class="form-control" />
                        <span asp-validation-for="InterestRate"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Terms" class="col-sm-4 col-form-label">Terms</label>
                    <div class="col-sm-8">
                        <input type="number" step="0.01" asp-for="Terms" class="form-control" />
                        <span asp-validation-for="Terms"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4">&nbsp;</label>
                    <div class="col-sm-8 ">
                        <hr />
                        <button id="save" class="btn btn-light btn-sm" type="submit">&nbsp; Save &nbsp;</button>&nbsp;&nbsp;
                        <a class="btn btn-light btn-sm" href="/loans">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<br />
